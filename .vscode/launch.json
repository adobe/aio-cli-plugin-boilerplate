{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--runInBand"
      ],
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    }
  ]
}